<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#000000" /> <!-- Black color when checked -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#000000" /> <!-- Black border when unchecked -->
            <solid android:color="@android:color/transparent" /> <!-- Transparent fill when unchecked -->
        </shape>
    </item>
</selector>