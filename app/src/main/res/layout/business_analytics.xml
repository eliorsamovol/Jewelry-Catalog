            android:layout_marginTop="16dp"
            android:fontFamily="@font/toolbarfont"
            app:layout_constraintTop_toBottomOf="@+id/total_profit_all_time_headline"
            app:layout_constraintStart_toEndOf="@id/total_profit_last_month_value"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/amount_format"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/best_seller_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/toolbarfont"
            android:layout_marginTop="18dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/total_profit_all_time_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/best_seller_headline"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/best_seller_last_month_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/toolbarfont"
            app:layout_constraintTop_toBottomOf="@+id/best_seller_headline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/best_seller_all_time_headline"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:text="@string/last_month"
            android:layout_marginTop="16dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/best_seller_all_time_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/toolbarfont"
            app:layout_constraintTop_toBottomOf="@+id/best_seller_headline"
            app:layout_constraintStart_toEndOf="@+id/best_seller_last_month_headline"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/all_time"
            android:layout_marginTop="16dp"
