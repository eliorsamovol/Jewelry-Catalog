            android:layout_marginTop="16dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/total_profit_last_month_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/toolbarfont"
            app:layout_constraintTop_toBottomOf="@+id/total_profit_last_month_headline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/total_profit_all_time_value"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:text="@string/amount_format"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/total_profit_all_time_value"
            android:layout_width="wrap_content"
